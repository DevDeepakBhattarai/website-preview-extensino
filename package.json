{
  "name": "website-preview",
  "displayName": "Website Preview ",
  "version": "0.0.1",
  "description": "A browser extension that shows the preview of https://dev.app.blendit.ai ",
  "author": "Deepak Bhattarai",
  "scripts": {
    "dev": "plasmo dev --verbose",
    "build": "plasmo build",
    "package": "plasmo package"
  },
  "dependencies": {
    "@radix-ui/react-popover": "^1.0.7",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "framer-motion": "^11.2.4",
    "lucide-react": "^0.378.0",
    "plasmo": "^0.86.3",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "tailwind-merge": "^2.3.0",
    "tailwindcss": "3.4.1",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.1.1",
    "@types/chrome": "0.0.258",
    "@types/node": "20.11.5",
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18",
    "postcss": "8.4.33",
    "prettier": "3.2.4",
    "typescript": "5.3.3"
  },
  "manifest": {
    "host_permissions": [
      "*://*.blendit.ai/"
    ],
    "permissions": [
      "activeTab",
      "scripting",
      "tabs",
      "cookies"
    ]
  }
}